<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">Serial command to ESP</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: passSerial"> 
			<button class='btn btn-primary'>Send</button>
			<button class='btn' data-bind="click: resetESPFunction">Reset ESP</button>
		</div>
		<label class="control-label">High humidity trigger </label>
		<div class="controls">
			<input type="text" class="input-block-level" data-bind="value: humidityHigh">
		</div>
		<label class="control-label">Low humidity trigger </label>
		<div class="controls">
			<input type="text" class="input-block-level" data-bind="value: humidityLow">
        </div>
		
		<div><h6> for official use only </h6></div>
    </div>
</form>